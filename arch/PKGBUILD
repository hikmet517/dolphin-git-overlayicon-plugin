pkgname=dolphin-git-overlayicon-plugin-git
_pkgname=${pkgname%-git*}
pkgver=r2.f5a33bb
pkgrel=1
pkgdesc='Git overlay icon for dolphin'
arch=('x86_64')
url='https://github.com/hikmet517/dolphin-git-overlayicon-plugin'
license=('GPL3')
depends=(
    'qt6-base'
    'qt6-declarative'
    'kio'
)
makedepends=(
    'cmake'
    'git'
    'qt6-tools'
    'kio'
)
source=("git+https://github.com/hikmet517/dolphin-git-overlayicon-plugin")
sha256sums=('SKIP')

pkgver() {
    cd "${srcdir}/${_pkgname}"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
    cd "$srcdir/${_pkgname}"
    cmake -S . -B build -DCMAKE_BUILD_TYPE=Release
    cmake --build build/
}

package () {
    cd "$srcdir/${_pkgname}"
    DESTDIR=$pkgdir cmake --install build
}
